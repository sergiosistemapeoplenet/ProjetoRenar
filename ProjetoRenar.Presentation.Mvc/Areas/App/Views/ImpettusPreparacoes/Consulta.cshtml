@{
    ViewBag.Icon = "fa fa-table";
    ViewBag.Titulo = "Preparações";
    ViewBag.Pagina = "Preparações";
    ViewBag.Subtitulo = "Pesquisar preparações no sistema.";
}

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor


<div class="row" style="margin-top: -10px;">
    <div class="col-md-12">
        <div class="card-header-tab card-header">
            <div class="card-header-title">
                <h4 style="margin-top: 10px;" class="card-title"><i class="fa fa-search-plus"></i>&nbsp;Consulta de preparações</h4>
            </div>
        </div>
        <div class="card card-body">

            <form method="post" action="/app/impettuspreparacoes/consulta">

                <div class="row mb-3 mt-2">
                    <div class="col-md-6">
                        <input type="text"
                               value="@ViewBag.Nome"
                               name="nome"
                               style="height: 34px;"
                               class="form-control"
                               placeholder="Digite o nome aqui para efetuar a busca"
                               autocomplete="off"
                               data_placement="bottom"
                               data_toggle="popover"
                               data_trigger="focus"
                               title="Consulta de regiões"
                               data_content="Informe todo ou parte do nome desejado." />
                    </div>
                    <div class="col-md-2">
                        <select class="form-control" name="ativo">
                            <option value="1" @(ViewBag.Ativo == 1 ? "selected" : "")>Ativos</option>
                            <option value="0" @(ViewBag.Ativo == 0 ? "selected" : "")>Inativos</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-primary" onclick="loading()" type="submit">
                            <i class="fa fa-search"></i> Pesquisar
                        </button>
                        <a href="/app/impettuspreparacoes/cadastro" class="btn btn-success" onclick="loading()">
                            <i class="fa fa-plus"></i> Incluir Preparação
                        </a>
                    </div>
                </div>

                @using ProjetoRenar.Domain.Entities
                @if (ViewBag.Dados != null)
                {
                    var consulta = (List<ImpettusPreparacao>)ViewBag.Dados;

                    if (consulta != null && consulta.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover" id="tabela">
                                <thead>
                                    <tr>
                                        <th>Nome da preparação</th>
                                        <th>Grupo</th>
                                        <th>Tipo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in consulta)
                                    {
                                        <tr>
                                            <td class="clickable" style="cursor: pointer;" onclick="atualizar('@ProjetoRenar.Presentation.Mvc.Helpers.EncryptionHelper.Encrypt(item.IdPreparacao.ToString())')">
                                                @item.NomePreparacao.ToUpper()
                                            </td>
                                            <td class="clickable" style="cursor: pointer;" onclick="atualizar('@ProjetoRenar.Presentation.Mvc.Helpers.EncryptionHelper.Encrypt(item.IdPreparacao.ToString())')">
                                                @item.NomeGrupoPreparacao.ToUpper()
                                            </td>
                                            <td class="clickable" style="cursor: pointer;" onclick="atualizar('@ProjetoRenar.Presentation.Mvc.Helpers.EncryptionHelper.Encrypt(item.IdPreparacao.ToString())')">
                                                @if (item.FlagResfriado)
                                                {
                                                    <span class="badge badge-secondary">RESFRIADO</span>
                                                }
                                                @if (item.FlagCongelado)
                                                {
                                                    <span class="badge badge-secondary">CONGELADO</span>
                                                }
                                                @if (item.FlagTemperaturaAmbiente)
                                                {
                                                    <span class="badge badge-secondary">TEMP. AMBIENTE</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                }

            </form>

        </div>
    </div>
</div>

@section scripts {
    <script>
        function atualizar(id) {
            $('#loading').show();
            window.location = '/app/impettuspreparacoes/edicao/' + id;
        }
    </script>
}