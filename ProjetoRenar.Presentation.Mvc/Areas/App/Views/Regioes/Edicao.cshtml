@{
    ViewBag.Icon = "fa fa-globe";
    ViewBag.Titulo = "Regiões";
    ViewBag.Pagina = "Regiões";
    ViewBag.Subtitulo = "Incluir tipos de produtos no sistema.";
}

@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@model ProjetoRenar.Application.ViewModels.Regioes.EdicaoRegiaoViewModel

<div class="row" style="margin-top: -10px;">
    <div class="col-md-12">
        <div class="card-header-tab card-header">
            <div class="card-header-title">
                <h4 style="margin-top: 10px;" class="card-title"><i class="fa fa-pencil-alt"></i>&nbsp;Edição de região</h4>
            </div>
        </div>
        <div class="card card-body">

            @using (Html.BeginForm())
            {
                <div>
                    @Html.HiddenFor(model => model.IDRegiao)
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <label>Nome da região:</label>
                        @Html.TextBoxFor(model => model.NomeRegiao, new { @class = "form-control" })
                        <div class="text-danger">
                            @Html.ValidationMessageFor(model => model.NomeRegiao)
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-pencil-alt"></i> Atualizar dados
                        </button>
                        @if (Model.FlagAtivo.Value)
                        {
                            <a href="/app/regioes/inativar/@ProjetoRenar.Presentation.Mvc.Helpers.EncryptionHelper.Encrypt(Model.IDRegiao.ToString())"
                               class="btn btn-danger" onclick="loading()">
                                <i class="fa fa-trash-alt"></i> Inativar
                            </a>
                        }
                        else
                        {
                            <a href="/app/regioes/reativar/@ProjetoRenar.Presentation.Mvc.Helpers.EncryptionHelper.Encrypt(Model.IDRegiao.ToString())" class="btn btn-info" onclick="loading()">
                                <i class="fa fa-upload"></i> Reativar
                            </a>
                        }
                        <a href="/app/regioes/consulta" class="btn btn-light" onclick="loading()">
                            <i class="fa fa-chevron-left"></i> Voltar
                        </a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>